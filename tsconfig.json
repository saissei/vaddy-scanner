{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "types": ["node", "jest"],
    "baseUrl": "./src/"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/**/__tests__", "**/*.test.ts"],
  "compileOnSave": false
}
